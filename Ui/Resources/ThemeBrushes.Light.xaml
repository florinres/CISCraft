<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Diagram Brushes - Light Theme -->
    <SolidColorBrush x:Key="NodeBackgroundBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="NodeBorderBrush" Color="#C8C8C8" />
    <SolidColorBrush x:Key="NodeHighlightBrush" Color="#C75000" />
    <SolidColorBrush x:Key="NodeNameBackgroundBrush" Color="#E8E8E8" />

    <SolidColorBrush x:Key="SbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="RbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="DbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="AluStrokeMPM"    Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="MemoryStrokeMPM" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="OtherStrokeMPM"  Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="IndexStrokeMPM"  Color="{x:Static Colors.Gray}" />

    <!-- Header background (if used in custom chrome) -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#E0E0E0" />

    <!-- Text for diagram labels -->
    <SolidColorBrush x:Key="DiagramTextBrush" Color="#1A1A1A" />

    <!-- Bus visuals -->
    <SolidColorBrush x:Key="BusFillBrush" Color="#BDBDBD" />
    <SolidColorBrush x:Key="BusStrokeBrush" Color="#303030" />
</ResourceDictionary>
