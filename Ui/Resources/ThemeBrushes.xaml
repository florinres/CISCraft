<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- Theme Colors for Headers -->
    <Color x:Key="LightThemeHeaderBackgroundColor">#E0E0E0</Color>
    <Color x:Key="DarkThemeHeaderBackgroundColor">#2D2D30</Color>
    
    <!-- Diagram Colors - Always Dark -->
    <Color x:Key="DiagramNodeBackgroundColor">#2A2A2A</Color>
    <Color x:Key="DiagramNodeBorderColor">#555555</Color>
    <Color x:Key="DiagramNodeHighlightColor">#FF8C00</Color>
    <Color x:Key="DiagramNodeNameBackgroundColor">#1E1E1E</Color>

    <!-- HeaderBackgroundBrush - Theme Aware -->
    <SolidColorBrush x:Key="HeaderBackgroundBrushLight" Color="{StaticResource LightThemeHeaderBackgroundColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrushDark" Color="{StaticResource DarkThemeHeaderBackgroundColor}" />
    
    <!-- Use a standard approach with theme dictionaries instead of ThemeResource -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource DarkThemeHeaderBackgroundColor}" />
    
    <!-- Diagram Brushes - Always Dark regardless of theme -->
    <SolidColorBrush x:Key="NodeBackgroundBrush" Color="{StaticResource DiagramNodeBackgroundColor}" />
    <SolidColorBrush x:Key="NodeBorderBrush" Color="{StaticResource DiagramNodeBorderColor}" />
    <SolidColorBrush x:Key="NodeHighlightBrush" Color="{StaticResource DiagramNodeHighlightColor}" />
    <SolidColorBrush x:Key="NodeNameBackgroundBrush" Color="{StaticResource DiagramNodeNameBackgroundColor}" />
</ResourceDictionary>