<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Diagram Brushes - Dark Theme -->
    <SolidColorBrush x:Key="NodeBackgroundBrush" Color="#2A2A2A" />
    <SolidColorBrush x:Key="NodeBorderBrush" Color="#555555" />
    <SolidColorBrush x:Key="NodeHighlightBrush" Color="#FF8C00" />
    <SolidColorBrush x:Key="NodeNameBackgroundBrush" Color="#1E1E1E" />

    <!-- Header background (if used in custom chrome) -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D2D30" />
</ResourceDictionary>
