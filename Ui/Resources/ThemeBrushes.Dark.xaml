<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Diagram Brushes - Dark Theme -->
    <SolidColorBrush x:Key="NodeBackgroundBrush" Color="#2A2A2A" />
    <SolidColorBrush x:Key="IO0BorderBrush" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="IO1BorderBrush" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="IO2BorderBrush" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="IO3BorderBrush" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="NodeBorderBrush" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="NodeHighlightBrush" Color="{x:Static Colors.Red}" />
    <SolidColorBrush x:Key="NodeNameBackgroundBrush" Color="#1E1E1E" />

    <SolidColorBrush x:Key="SbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="RbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="DbusStrokeMPM"   Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="AluStrokeMPM"    Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="MemoryStrokeMPM" Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="OtherStrokeMPM"  Color="{x:Static Colors.Gray}" />
    <SolidColorBrush x:Key="IndexStrokeMPM"  Color="{x:Static Colors.Gray}" />

    <!-- Header background (if used in custom chrome) -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D2D30" />

    <!-- Text for diagram labels -->
    <SolidColorBrush x:Key="DiagramTextBrush" Color="#FFFFFF" />

    <!-- Bus visuals -->
    <SolidColorBrush x:Key="RbusFillBrush" Color="#808080" />
    <SolidColorBrush x:Key="RbusStrokeBrush" Color="#000000" />
    <SolidColorBrush x:Key="SbusFillBrush" Color="#808080" />
    <SolidColorBrush x:Key="SbusStrokeBrush" Color="#000000" />
    <SolidColorBrush x:Key="DbusFillBrush" Color="#808080" />
    <SolidColorBrush x:Key="DbusStrokeBrush" Color="#000000" />
</ResourceDictionary>
