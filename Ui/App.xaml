<Application
    x:Class="Ui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:Ui.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="NodeBackgroundBrush" Color="#2A2A2A"/>
            <SolidColorBrush x:Key="NodeBorderBrush" Color="#555555"/>
            <SolidColorBrush x:Key="NodeNameBackgroundBrush" Color="#1E1E1E"/>
            <helpers:InnerThicknessConverter x:Key="InnerThicknessConverter" />
            <BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>