<Application
    x:Class="Ui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:Ui.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <!-- Theme aware brush dictionaries (dark default) -->
                <ResourceDictionary Source="Resources/ThemeBrushes.Dark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <helpers:InnerThicknessConverter x:Key="InnerThicknessConverter" />
            <BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <helpers:AddressFormatConverter x:Key="AddressFormatConverter"/>
            <helpers:RegisterFormatConverter x:Key="RegisterFormatConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>