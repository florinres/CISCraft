<Page x:Class="Ui.Views.Pages.AvalonEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Ui.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:pages="clr-namespace:Ui.Views.Pages"
      xmlns:components="clr-namespace:Ui.Components"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance pages:AvalonEditPage,
                                     IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="AvalonEditPage" Height="450" Width="800">
    <Grid>
        <components:StyledAvalonEdit
            x:Name="TextEditor"
            SyntaxHighlighting="Custom"
            FontFamily="Consolas"
            FontSize="10pt"
            ShowLineNumbers="True"/>
    </Grid>
</Page>
