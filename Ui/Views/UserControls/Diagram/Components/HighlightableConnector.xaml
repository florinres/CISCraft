<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.HighlightableConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=diagram:HighlightableConnectorViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <Style x:Key="ConnectorStyle" TargetType="Path">
            <!-- Default (non-highlighted) -->
            <Setter Property="Stroke" Value="{DynamicResource NodeBorderBrush}" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="StrokeLineJoin" Value="Round" />
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                    <Setter Property="Stroke" Value="{DynamicResource NodeHighlightBrush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Path x:Name="LinePath"
              Style="{StaticResource ConnectorStyle}" />
    </Grid>
</UserControl>