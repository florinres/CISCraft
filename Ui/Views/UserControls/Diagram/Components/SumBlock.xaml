<UserControl x:Class="Ui.Views.UserControls.Diagram.SumBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram" xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:SumBlockViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <!-- Use Viewbox to scale the content automatically -->
        <Viewbox Stretch="Uniform">
            <Grid Width="60" Height="90">
                <!-- Main body using shared resources -->
                <Polygon Points="0,20 0,70  60,90 60,55 45,45 60,40 60,0"
                         Fill="{DynamicResource NodeBackgroundBrush}"
                         Stroke="{DynamicResource NodeBorderBrush}"
                         StrokeThickness="2"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                    <Polygon.RenderTransform>
                        <RotateTransform Angle="-90"
                                         CenterX="30"
                                         CenterY="45" />
                    </Polygon.RenderTransform>
                </Polygon>

                <!-- Text -->
                <TextBlock Text="{Binding DataContext.MemoryContext.CurrentMemoryRow[2], RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{DynamicResource DiagramTextBrush}"
                           FontWeight="Bold"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>