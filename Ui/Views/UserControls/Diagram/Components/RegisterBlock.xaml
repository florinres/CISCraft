<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.RegisterBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=diagram:RegisterViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <Style x:Key="NodeStyleRectangle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Background" Value="{DynamicResource NodeBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource NodeBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="0" />
            <!-- <Setter Property="Height" Value="{x:Static const:DiagramConstants.ElementHeight}"/> -->
            <!-- <Setter Property="Width" Value="{x:Static const:DiagramConstants.ElementWidth}"/> -->
            <!-- <Setter Property="Height" Value="30"/> -->
            <!-- <Setter Property="Width" Value="190"/> -->
            
            <Style.Triggers>
                <!-- Hides the border if WithBorder is false -->
                <DataTrigger Binding="{Binding WithBorder, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </DataTrigger>
                
                <!-- Highlights the border if IsHighlighted is true -->
                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource NodeHighlightBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsHighlighted}" Value="False">
                    <Setter Property="BorderBrush" Value="{DynamicResource NodeBorderBrush}" />
                </DataTrigger>
                
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding WithBorder, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False" />
                        <Condition Binding="{Binding IsHighlighted}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="{DynamicResource NodeHighlightBrush}" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource NodeStyleRectangle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid x:Name="RegisterBlockBorder" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />   <!-- Left side -->
                <ColumnDefinition Width="Auto" /> <!-- Right side -->
            </Grid.ColumnDefinitions>

            <!-- Left-aligned Text -->
            <TextBlock Grid.Column="0"
                       Foreground="White"
                       VerticalAlignment="Center"
                       TextAlignment="Left"
                       Padding="8,0,0,0">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource RegisterFormatConverter}">
                        <Binding Path="Value"/>
                        <Binding Path="Format"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <!-- Right-aligned Name -->
            <Border Grid.Column="1"
                    Margin="8,0,0,0"
                    Background="{DynamicResource NodeNameBackgroundBrush}"
                    CornerRadius="0,4,4,0"
                    MinWidth="45">
                <TextBlock Text="{Binding Name}" 
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           MinWidth="{Binding MinNameWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Padding="2"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
