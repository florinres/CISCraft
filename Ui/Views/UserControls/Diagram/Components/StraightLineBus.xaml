<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.StraightLineBus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram" xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:StraightLineBusViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="ActualVisualElement"
                   Fill="Gray"
                   Stroke="Black"
                   StrokeThickness="1"
                   Width="{Binding LineWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Height="{Binding LineHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   RadiusX="4" RadiusY="4"/>
    </Grid>
</UserControl>
