<UserControl x:Class="Ui.Views.UserControls.Diagram.MuxBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram" xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:MuxBlockViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             Width="60" Height="50">
    <Grid>
        <!-- Flippable shape layer -->
        <Canvas x:Name="ShapeLayer" Width="60" Height="50">
            <Polygon Points="0,0 0,50 60,40 60,10"
                     Stroke="{DynamicResource NodeBorderBrush}"
                     StrokeThickness="2"/>
        </Canvas>

        <!-- Fixed label layer (not flipped) -->
        <Canvas Width="80" Height="60" IsHitTestVisible="False">
            <TextBlock Text="MUX" FontSize="14" FontWeight="Bold"
                       Canvas.Left="10" Canvas.Top="10" Foreground="{DynamicResource DiagramTextBrush}"/>
            <TextBlock Text="2:1" FontSize="12" FontWeight="Bold"
                       Canvas.Left="17" Canvas.Top="25" Foreground="{DynamicResource DiagramTextBrush}"/>
        </Canvas>
    </Grid>
</UserControl>