<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.BitBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:BitBlockViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100">

    <UserControl.Resources>
        <Style x:Key="NodeStyleRectangle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BorderBrush" Value="{DynamicResource NodeBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
        </Style>
    </UserControl.Resources>

    <!-- Use Grid to center content -->
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Centered Border -->
        <Border 
            x:Name="BitBlockBorder"
            Grid.Row="0"
            Style="{StaticResource NodeStyleRectangle}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Value}"
                           Foreground="{DynamicResource DiagramTextBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center" 
                           FontSize="10"/>
            </StackPanel>
        </Border>

        <!-- Bottom-center label under the Border -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Name}"
                   Foreground="{DynamicResource DiagramTextBrush}"
                   FontSize="10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,4,0,0" />
    </Grid>

</UserControl>