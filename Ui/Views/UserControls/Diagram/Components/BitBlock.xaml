<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.BitBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:BitBlockViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100">

    <UserControl.Resources>
        <Style x:Key="NodeStyleRectangle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Background" Value="{DynamicResource NodeBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource NodeBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
        </Style>
    </UserControl.Resources>

    <!-- Use Grid to center content -->
    <Grid>
        <!-- Centered Border -->
        <Border 
            x:Name="BitBlockBorder"
            Style="{StaticResource NodeStyleRectangle}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Value}"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center" 
                           FontSize="10"/>
            </StackPanel>
        </Border>

        <!-- Top-right TextBlock outside the Border -->
        <TextBlock Text="{Binding Name}"
                   Foreground="White"
                   FontSize="10">
            <TextBlock.RenderTransform>
                <TranslateTransform 
                    X="25" 
                    Y="-10"/> <!-- negative Y to move above the Border -->
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>

</UserControl>