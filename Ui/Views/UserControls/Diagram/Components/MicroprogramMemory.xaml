<UserControl x:Class="Ui.Views.UserControls.Diagram.Components.MicroprogramMemory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ui.Views.UserControls.Diagram.Components"
             xmlns:viewModel="clr-namespace:Ui.ViewModels"
             xmlns:diagram="clr-namespace:Ui.ViewModels.Components.Diagram"
             d:DataContext="{d:DesignInstance Type=diagram:MicroprogramMemoryViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="1050">
    <Border BorderBrush="White" BorderThickness="1" Padding="4">
        <StackPanel>
            <!-- <Grid.RowDefinitions> -->
            <!--     <RowDefinition Height="Auto"/> -->
            <!--     <RowDefinition Height="Auto"/> -->
            <!-- </Grid.RowDefinitions> -->

                <!-- Header -->
                <TextBlock Grid.Row="0" Text="MICROPROGRAM MEMORY"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,4" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" /> <!-- Last one expands -->
                </Grid.ColumnDefinitions>
                <!-- Dynamic Items -->
                <!-- <ScrollViewer HorizontalScrollBarVisibility="Auto"> -->
                    <ItemsControl Grid.Row="0" ItemsSource="{Binding MicroProgramItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="White"
                                        BorderThickness="1"
                                        Margin="1"
                                        Padding="4"
                                        MinWidth="50"
                                        CornerRadius="4">
                                    <TextBlock Text="{Binding}"
                                               Foreground="White"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.AlternationCount>8</ItemsControl.AlternationCount>
                    </ItemsControl>
                <!-- </ScrollViewer> -->
            </Grid>
        </StackPanel>
    </Border>
</UserControl>