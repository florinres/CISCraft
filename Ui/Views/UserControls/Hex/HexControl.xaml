<UserControl x:Class="Ui.Views.UserControls.Hex.HexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfHexaEditor="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
             xmlns:viewModel="clr-namespace:Ui.Interfaces.ViewModel" xmlns:hexviewer="clr-namespace:Ui.ViewModels.Components.HexViewer"
             mc:Ignorable="d"
             Padding="0" Margin="0"
             d:DataContext="{d:DesignInstance Type=viewModel:IHexViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0">
        <wpfHexaEditor:HexEditor
            Grid.Row="1"
            x:Name="HexEditorControl"
            Stream="{Binding HexEditorStream, Mode=OneWay, IsAsync=True}"
            Width="Auto"
            Height="Auto"
            Margin="0"
            AllowByteCount="False"
            AllowDrop="False"
            AllowExtend="False"
            AppendNeedConfirmation="True"
            BorderThickness="0"
            ByteGrouping="TwoByte"
            ByteShiftLeft="{Binding LongValue, ElementName=HbBsl, UpdateSourceTrigger=PropertyChanged}"
            ByteSpacerPositioning="HexBytePanel"
            ByteSpacerVisualStyle="Dash"
            ByteSpacerWidthTickness="Normal"
            DataStringVisual="{Binding DataStringVisual, Mode=TwoWay}"
            DefaultCopyToClipboardMode="HexaString"
            ForegroundSecondColor="IndianRed"
            HighLightColor="DimGray"
            SelectionSecondColor="DimGray"
            SelectionFirstColor="DimGray"
            AllowAutoHighLightSelectionByte="False"
            OffSetStringVisual="Hexadecimal"
            PreloadByteInEditorMode="MaxVisibleLine"
            VisualCaretMode="Overwrite"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
            ZoomScale="{Binding ZoomFactor, Mode=TwoWay}"
            ReadOnlyMode="True"
            AllowZoom="True">
            
            <!-- Add Context Menu for right-click options -->
            <wpfHexaEditor:HexEditor.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Go to Address (Ctrl+F)" Command="{Binding GotoAddressCommand}" InputGestureText="Ctrl+F"/>
                </ContextMenu>
            </wpfHexaEditor:HexEditor.ContextMenu>
            
        </wpfHexaEditor:HexEditor>
        
        <!-- Add an overlay tooltip to show Ctrl+F shortcut when the control is first loaded -->
        <!-- <Border x:Name="ShortcutOverlay" 
                Background="{DynamicResource SystemAccentColorLight1}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" Padding="8,4"
                CornerRadius="4"
                Visibility="Collapsed">
            <TextBlock Text="Press Ctrl+F to go to address" Foreground="White" FontWeight="SemiBold" />
        </Border> -->
    </Grid>
</UserControl>