<UserControl x:Class="Ui.Views.UserControls.Hex.HexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfHexaEditor="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
             xmlns:viewModel="clr-namespace:Ui.Interfaces.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModel:IHexViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <wpfHexaEditor:HexEditor
            x:Name="HexEditorControl"
            Stream="{Binding HexEditorStream, Mode=OneWay}"
            Width="Auto"
            Height="Auto"
            Margin="2"
            AllowByteCount="False"
            AllowDrop="False"
            AllowExtend="False"
            AppendNeedConfirmation="True"
            BorderThickness="1"
            ByteGrouping="TwoByte"
            ByteShiftLeft="{Binding LongValue, ElementName=HbBsl, UpdateSourceTrigger=PropertyChanged}"
            ByteSpacerPositioning="HexBytePanel"
            ByteSpacerVisualStyle="Dash"
            ByteSpacerWidthTickness="Normal"
            DataStringVisual="Hexadecimal"
            DefaultCopyToClipboardMode="HexaString"
            ForegroundSecondColor="Blue"
            OffSetStringVisual="Hexadecimal"
            PreloadByteInEditorMode="MaxVisibleLine"
            VisualCaretMode="Overwrite" 
            Background="{DynamicResource ApplicationBackgroundBrush}"
            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
            ReadOnlyMode="True"
            />

    </Grid>
</UserControl>